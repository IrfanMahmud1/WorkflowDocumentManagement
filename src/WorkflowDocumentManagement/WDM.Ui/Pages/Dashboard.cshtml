                </div>
            </div>
        </div>

        <!-- Products Table Card -->
        <div class="col-xl-4 col-lg-6 col-md-12 mb-4">
            <div class="card border-0 shadow-lg table-card card-products">
                <div class="card-body text-center text-white p-4">
                    <div class="mb-3">
                        <h1 class="display-4">📦</h1>
                    </div>
                    <h5 class="card-title mb-3">Products Table</h5>
                    <h2 class="mb-2">567</h2>
                    <small class="opacity-75">Items in inventory</small>
                </div>
            </div>
        </div>

        <!-- Orders Table Card -->
        <div class="col-xl-4 col-lg-6 col-md-12 mb-4">
            <div class="card border-0 shadow-lg table-card card-orders">
                <div class="card-body text-center text-white p-4">
                    <div class="mb-3">
                        <h1 class="display-4">🛒</h1>
                    </div>
                    <h5 class="card-title mb-3">Orders Table</h5>
                    <h2 class="mb-2">890</h2>
                    <small class="opacity-75">Total orders placed</small>
                </div>
            </div>
        </div>

        <!-- Categories Table Card -->
        <div class="col-xl-4 col-lg-6 col-md-12 mb-4">
            <div class="card border-0 shadow-lg table-card card-categories">
                <div class="card-body text-center text-white p-4">
                    <div class="mb-3">
                        <h1 class="display-4">🏷️</h1>
                    </div>
                    <h5 class="card-title mb-3">Categories Table</h5>
                    <h2 class="mb-2">45</h2>
                    <small class="opacity-75">Product categories</small>
                </div>
            </div>
        </div>

        <!-- Reviews Table Card -->
        <div class="col-xl-4 col-lg-6 col-md-12 mb-4">
            <div class="card border-0 shadow-lg table-card card-reviews">
                <div class="card-body text-center text-white p-4">
                    <div class="mb-3">
